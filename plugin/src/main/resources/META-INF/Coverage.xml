<consulo-plugin>
	<extensions defaultExtensionNs="consulo.java">
		<runConfigurationExtension implementation="com.intellij.java.coverage.CoverageJavaRunConfigurationExtension"/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<coverageRunner implementation="com.intellij.java.coverage.IDEACoverageRunner"/>
		<coverageRunner implementation="com.intellij.java.coverage.JaCoCoCoverageRunner"/>
		<coverageEngine implementation="com.intellij.java.coverage.JavaCoverageEngine" order="last"/>
		<projectViewNodeDecorator implementation="com.intellij.java.coverage.CoverageProjectViewClassNodeDecorator"/>

		<projectService serviceInterface="com.intellij.java.coverage.JavaCoverageAnnotator"
						serviceImplementation="com.intellij.java.coverage.JavaCoverageAnnotator"/>
		<programRunner implementation="com.intellij.java.coverage.DefaultJavaCoverageRunner" id="DefaultJavaCoverageRunner"/>
		<selectInTarget implementation="consulo.ide.impl.idea.coverage.view.SelectInCoverageView"/>
	</extensions>

	<extensionPoints>
		<extensionPoint name="coverageEngineExtension" interface="com.intellij.java.coverage.JavaCoverageEngineExtension"/>
	</extensionPoints>
	<actions>
		<group id="IDEACoverageMenu" popup="false">
			<reference ref="CoverageMenu"/>
			<add-to-group group-id="AnalyzeMenu" anchor="before" relative-to-action="AnalyzeActions"/>
		</group>
	</actions>
</consulo-plugin>
